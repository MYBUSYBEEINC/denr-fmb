<script type="text/javascript">

    //FOR index.cshtml

    const formIndex = document.getElementById('ImporterRegForm');
    const showModalButton = document.getElementById('btnSubmit');
    const confirmationModal = document.getElementById('confirmSubmitModal');
    const confirmButton = document.getElementById('confirmBtn');

    ////FOR Approval.cshtml
    const form = document.getElementById('ApplApprvlForm');
    const showApproveModalButton = document.getElementById('approveBtn');
    const confirmationApproveModal = document.getElementById('confirmApproveModal');
    const confirmApproveButton = document.getElementById('confirmApproveBtn');

    const showDeclineModalButton = document.getElementById('declineBtn');
    const confirmationDeclineModal = document.getElementById('confirmDeclineModal');
    const confirmDeclineButton = document.getElementById('confirmDeclineBtn');

    const showSaveModalButton = document.getElementById('saveBtn');
    const confirmationSaveModal = document.getElementById('confirmSaveModal');
    const confirmSaveButton = document.getElementById('confirmSaveBtn');

    //FOR APPROVE
    // Function to display the modal
    function showApproveModal() {
        confirmationApproveModal.style.display = 'block';
    }

    // Function to hide the modal
    function hideApproveModal() {
        confirmationApproveModal.style.display = 'none';
    }

    // Event listener for the "Submit" button
    if(showApproveModalButton != null)
    showApproveModalButton.addEventListener('click', showApproveModal);

    // Event listener for the "Confirm" button
    confirmApproveButton.addEventListener('click', function () {
        // Submit the form when the "Confirm" button is clicked
        form.submit();
    });

    // Close the modal when the user clicks outside of it
    window.addEventListener('click', function (event) {
        if (event.target === confirmationApproveModal) {
            hideApproveModal();
        }
    });

    //FOR DECLINE
    // Function to display the modal
    function showDeclineModal() {
        confirmationDeclineModal.style.display = 'block';
    }

    // Function to hide the modal
    function hideDeclineModal() {
        confirmationDeclineModal.style.display = 'none';
    }

    // Event listener for the "Submit" button
    if(showDeclineModalButton != null)
    showDeclineModalButton.addEventListener('click', showDeclineModal);

    // Event listener for the "Confirm" button
    confirmDeclineButton.addEventListener('click', function () {
        // Submit the form when the "Confirm" button is clicked
        form.submit();
    });

    // Close the modal when the user clicks outside of it
    window.addEventListener('click', function (event) {
        if (event.target === confirmationDeclineModal) {
            hideDeclineModal();
        }
    });

    //FOR Save
    // Function to display the modal
    function showSaveModal() {
        confirmationSaveModal.style.display = 'block';
    }

    // Function to hide the modal
    function hideSaveModal() {
        confirmationSaveModal.style.display = 'none';
    }

    // Event listener for the "Submit" button
    if (showSaveModalButton != null)
    showSaveModalButton.addEventListener('click', showSaveModal);

    // Event listener for the "Confirm" button
    if (confirmSaveButton != null)
    confirmSaveButton.addEventListener('click', function () {
        // Submit the form when the "Confirm" button is clicked
        form.submit();
    });

    // Close the modal when the user clicks outside of it
    window.addEventListener('click', function (event) {
        if (event.target === confirmationSaveModal) {
            hideSaveModal();
        }
    });



    // Function to display the modal
    function showModal() {
        confirmationModal.style.display = 'block';
    }

    // Function to hide the modal
