@using System.Security.Claims;
@model FMB_CIS.Models.ViewModel
@* @model FMB_CIS.Models.ApplicantListViewModel *@
@{
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
    ViewBag.Title = "Account Management";
}

<div id="card-container">
    <div id="card">
        <form asp-controller="AccountManagement" asp-action="AccountsApproval" method="post">
            <div class="row m-0">
                <input asp-for="uid" type="hidden" />
                <input asp-for="appid" type="hidden" />
                <div class="d-flex justify-content-end gap-2">
                    @if (((ClaimsIdentity)User.Identity).FindFirst("userRole").Value.Contains("CENRO") == true)
                    {
                        <input id="ApproveBtn" class="btn btn-primary w-105" name="SubmitButton" type="submit" value="Approve" />
                        <input class="btn btn-danger w-105 btnCancel" name="SubmitButton" type="submit" value="Decline" />
                    }
                    @if (((ClaimsIdentity)User.Identity).FindFirst("userRole").Value.Contains("Inspector") == true)
                    {
                        <input id="saveBtn" class="btn btn-primary w-105" name="SubmitButton" type="submit" value="Save" />
                    }

                </div>
            </div>
            <hr />
            <div id="profileSection" class="row m-0">
                <div class="col-md-3">
                    <div class="d-flex justify-content-center gap-1">
                        <img src="/assets/images/default-avatar.png" class="img-fluid rounded" />
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-10">
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            User Type
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.userType)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Name
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.FullName)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Email Address
                                        </label>
                                        <span class="fw-bold">
                                            @* @Model.acctApprovalViewModels.email *@
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.email)      
                                            @Html.HiddenFor(model => model.acctApprovalViewModels.email)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Contact Number
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.contact_no)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Valid ID
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.valid_id)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Valid ID Number
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.valid_id_no)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Birth Date
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.birth_date)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Street Address
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.street_address)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Region
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.region)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Province
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.province)
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            City/Municipality
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.city)
                                        </span>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="form-group d-flex flex-column gap-1">
                                        <label class="text-secondary small">
                                            Barangay
                                        </label>
                                        <span class="fw-bold">
                                            @Html.DisplayFor(model => model.acctApprovalViewModels.brgy)
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />

            <div class="row d-flex justify-content-center m-0">
                <div class="col-md-11 mb-5">
                    <span>Attached Forms</span>
                    <table class="w-100 striped-table">
                        <thead>
                            <tr>
                                <th class="text-nowrap">
                                    Name of form
                                </th>
                                <th class="text-nowrap text-center">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (tbl_files file in Model.tbl_Files)
                            {
                                <tr>
                                    <td class="text-nowrap">
                                        @file.filename
                                    </td>
                                    <td class="text-nowrap">
                                        <div class="d-flex justify-content-center gap-3">
                                            @* @Html.ActionLink("Download", "DownloadFile", new { filename = file.filename }) *@
                                            <a href="@Url.Action("DownloadFile", new { filename = file.filename, path = file.path })" class="bg-green text-white px-1 pb-1 rounded" title="view">
                                                <i data-feather="eye" class="data-feather-20"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row d-flex justify-content-center px-0 mb-5">
                    <div class="col-md-11 d-flex flex-column gap-2">
                        <span>
                            Comments
                        </span>
                        @* @Html.DisplayFor(model => model.acctApprovalViewModels.birth_date) *@
                        <textarea asp-for="acctApprovalViewModels.comment" class="form-control"></textarea>

                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

<script src="/js/jquery-3.7.1.min.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        $('#approveBtn').click(function () {
            $('#confirmApproveModal').modal("show");
        });

        $('#saveBtn').click(function () {
            $('#confirmApproveModal').modal("show");
        });

        $("#backApproveBtn").click(function () {
            $("#confirmApproveModal").modal('hide');
        });

        $("#confirmApproveBtn").click(function () {
            $("#confirmApproveModal").modal('hide');
            $('#confirmSuccessApproveModal').modal("show");
        });

        $('#declineBtn').click(function () {
            $('#confirmDeclineModal').modal("show");
        });

        $('#backDeclineBtn').click(function () {
            $('#confirmDeclineModal').modal("hide");
        });

        $("#confirmDeclineBtn").click(function () {
            $("#confirmDeclineModal").modal('hide');
            $('#confirmSuccessDeclineModal').modal("show");
        });
    });



</script>