@using System.Security.Claims;
@using System.Globalization;
@{
    Layout = "~/Views/Shared/_MainPageLayout.cshtml";
    ViewBag.Title = "Office Type Management";
}

<div class="c-card-container c-card-container-box">
    <div id="card">
        <div class="c-info">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@Url.Action("Index", "Home")" class="me-auto" title="back"><i data-feather="arrow-left" class="text-secondary backBtn"></i></a>                        Office Types
                    </h5>
                    <p class="card-text">Used to represent different types of office functions.</p>
                    <button id="btnCreateOfficeType" onclick="OpenCreateModal()" class="btn btn-primary">Create New Office Type</button>
                </div>
            </div>
        </div>
        <div class="c-content" id="officeTypeListPartialContainer">
            <div class="d-flex justify-content-center">
                <div class="spinner-border m-5" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery-3.7.1.min.js"></script>

<script type="text/javascript">
    $("#btnCreateOfficeType").click(function () {
    });

    function OpenCreateModal() {
        $('#officeTypeCreateModalContainer').load('/OfficeManagement/OfficeTypeCreateModal', function () {
            $("#createOfficeTypeModal").modal("show");
        });
    }

    $('#officeTypeListPartialContainer').load('/OfficeManagement/OfficeTypeListPartialView');
</script>