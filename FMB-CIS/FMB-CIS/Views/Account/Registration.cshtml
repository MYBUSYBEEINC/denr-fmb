@model FMB_CIS.Models.UserRegistrationViewModel
@{
    ViewBag.Title = "Registration";
}

<div class="container-fluid d-flex flex-column align-items-center justify-content-center">
    <div class="col-md-12 p-md-2 text-start">
        <img src="~/assets/images/logo.png" height="100" />
    </div>
    <hr class="hr" />
    

    <div class="container"></div>,<div class="container">
        <a href="@Url.Action("Index", "Home")" class="me-auto my-4" title="back"><i data-feather="arrow-left" class="text-secondary backBtn"></i></a>
        <div class="stepwizard col-md-offset-3">
            <div class="stepwizard-row setup-panel">
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle fw-bold">1</a>
                </div>
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-2" type="button" class="btn btn-default btn-circle fw-bold" disabled="disabled">2</a>
                </div>
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-3" type="button" class="btn btn-default btn-circle fw-bold" disabled="disabled">3</a>
                </div>
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-4" type="button" class="btn btn-default btn-circle fw-bold" disabled="disabled">4</a>
                </div>
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-5" type="button" class="btn btn-default btn-circle fw-bold" disabled="disabled">5</a>
                </div>
                <div class="stepwizard-step">
                    <p class="mb-1 fw-bold">Step</p>
                    <a href="#step-6" type="button" class="btn btn-default btn-circle fw-bold" disabled="disabled">6</a>
                </div>
            </div>
        </div>

        <form asp-action="Registration" id="RegForm" role="form" class="w-75 mx-auto">
            <div class="row setup-content" id="step-1">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="control-label small">User Type</label>
                            <select asp-for="tbl_user_types_id" class="form-control" aria-label="User Type" required="required">
                                <option value="" selected disabled>- Select User Type -</option>
                                <option value="1">Chainsaw Importer Only</option>
                                <option value="2">Chainsaw Seller Only</option>
                                <option value="3">Chainsaw Owner Only</option>
                                <option value="4">Chainsaw Importer and Seller</option>
                                <option value="5">Chainsaw Importer and Owner</option>
                                <option value="6">Chainsaw Seller and Owner</option>
                                <option value="7">Chainsaw Importer, Owner, and Seller</option>
                            </select>
                            <span asp-validation-for="tbl_user_types_id" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-primary nextBtn text-center" type="button">Next</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-2">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="first_name" class=" control-label small">First Name</label>
                            <input asp-for="first_name" class="form-control" required="required" />
                            <span asp-validation-for="first_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="middle_name" class="control-label small">Middle Name</label>
                            <input asp-for="middle_name" class="form-control" required="required" />
                            <span asp-validation-for="middle_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="last_name" class="control-label small">Last Name</label>
                            <input asp-for="last_name" class="form-control" required="required" />
                            <span asp-validation-for="last_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="suffix" class="form-label small">Suffix</label>
                            <input asp-for="suffix" class="form-control" />
                            <span asp-validation-for="suffix" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-secondary prevBtn" type="button">Previous</button>
                            <button class="btn btn-primary nextBtn" type="button">Next</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-3">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-3">
                            <label asp-for="email" class="control-label small">Email (Please use official email address)</label>
                            <input asp-for="email" class="form-control" placeholder="name@address.com"  required="required"/>
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="contact_no" class="control-label small">Contact Number (11 Digits)</label>
                            <input asp-for="contact_no" class="form-control" placeholder="09XX XXX XXXX" required="required"/>
                            <span asp-validation-for="contact_no" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-secondary prevBtn" type="button">Previous</button>
                            <button class="btn btn-primary nextBtn" type="button">Next</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-4">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="birth_date" class="control-label small">Birth Date (Must be 18 years old and above)</label>
                            <input asp-for="birth_date" type="date" class="form-control" required="required" />
                            <span asp-validation-for="birth_date" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="valid_id" class="control-label small">Valid ID</label>
                            <input asp-for="valid_id" class="form-control" required="required" />
                            <span asp-validation-for="valid_id" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="valid_id_no" class="control-label small">Valid ID Number</label>
                            <input asp-for="valid_id_no" class="form-control" required="required" />
                            <span asp-validation-for="valid_id_no" class="text-danger"></span>
                        </div>
                        <div class="text-center mt-4">
                            <button class="btn btn-secondary prevBtn" type="button">Previous</button>
                            <button class="btn btn-primary nextBtn" type="button">Next</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row setup-content" id="step-5">
                <div class="col-xs-6 col-md-offset-3">
                    <div class="col-md-12">
                        <div class="form-group mb-3">
                            <label asp-for="street_address" class="control-label small">Street Address</label>
                            <input asp-for="street_address" class="form-control" required="required" />
                            <span asp-validation-for="street_address" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="tbl_brgy_name" class="control-label small">Barangay</label>
                            <input asp-for="tbl_brgy_name" class="form-control" required="required" />
                            <span asp-validation-for="tbl_brgy_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="tbl_city_name" class="control-label small">City/Municipality</label>
                            <input asp-for="tbl_city_name" class="form-control" required="required" />
                            <span asp-validation-for="tbl_city_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="tbl_province_name" class="control-label small">Province</label>
                            <input asp-for="tbl_province_name" class="form-control" required="required" />
                            <span asp-validation-for="tbl_province_name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="tbl_region_id" class="control-label small">Region</label>
                            <select asp-for="tbl_region_id" class="form-select" aria-label="User Type" required="required">
                                <option selected disabled>- Select Region -</option>
                                <option value="1">Region I</option>
                                <option value="2">Region II</option>
                                <option value="3">Region III</option>
                                <option value="4">Region IV-A</option>
                                <option value="5">Region IV-B</option>
                                <option value="6">Region V</option>
                                <option value="7">Region VI</option>
                                <option value="8">Region VII</option>
                                <option value="8">Region VIII</option>
                                <option value="10">Region IX</option>
                                <option value="11">Region X</option>
                                <option value="12">Region XI</option>
                                <option value="13">Region XII</option>
                                <option value="14">Region XIII</option>
                                <option value="15">NCR</option>
                                <option value="16">CAR</option>
                                <option value="17">BARMM</option>
                            </select>
                            <span asp-validation-for="tbl_region_id" class="text-danger"></span>
                        </div>
